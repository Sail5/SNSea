<h1>Login</h1>

<%= form_with url: login_path, local: true do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.submit "Login" %>
  </div>
  <%= link_to "Sign up", new_user_path %>
<% end %>